@model IEnumerable<IdentityRole>
@{
    Layout = "_AdminLayout";
}

<table class="table table-sm table-bordered" id="users_role">
    <thead>
        <tr>
            <th>ID</th>
            <th>Rola</th>
            <th>Użytkownicy</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">Brak ról</td></tr>
        }
        else
        {
            foreach(var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td identity-role="@role.Id"></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edycja</a>
                            <button type="submit" class="btn btn-sm btn-danger">Usuń</button> 
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
