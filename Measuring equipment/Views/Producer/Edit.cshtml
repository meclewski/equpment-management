@model Measuring_equipment.Models.Producer

@{
    ViewData["Title"] = "Edycja producenta";
    Layout = "_AdminLayout";
}


<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProducerId" />
            <div class="form-group">
                <label asp-for="ProducerName" class="control-label">Nazwa</label>
                <input asp-for="ProducerName" class="form-control" />
                <span asp-validation-for="ProducerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProducerDesc" class="control-label">Opis</label>
                <input asp-for="ProducerDesc" class="form-control" />
                <span asp-validation-for="ProducerDesc" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <span style="float:left;">
        <button class="btn btn-primary" type="submit">Zapisz</button>
        <a class="btn btn-secondary" asp-controller="Producer" asp-action="Index">Anuluj</a>
    </span>
</form>

<form asp-action="Delete" method="get" asp-route-placeId="@Model.ProducerId">
    <span style="float:left; margin-left:4px">
        <input type="hidden" asp-for="ProducerId" />
        <button type="submit" class="btn btn-danger">Usuń</button>
    </span>
</form>
