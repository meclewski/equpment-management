@model AppUser
@{
    Layout = "_AdminLayout";
}

<form asp-action="UsersEdit" method="post" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Email">Adres e-mail</label>
        <input asp-for="Email" class=" form-control" />
    </div>
    <div class="form-group">
        <label for="password">Hasło</label>
        <input name="password" class="form-control" />
    </div>
    <br />
    <span style="float:left;">
        <button type="submit" class="btn btn-primary">Edytuj</button>
        <a asp-action="UsersIndex" class="btn btn-secondary">Anuluj</a>
    </span>
</form>

<form asp-action="UsersDelete" method="post">
    <span style="float:left; margin-left:4px">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
    </span>
</form>