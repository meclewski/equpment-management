@model UserViewModel.CreateModel
@{
    Layout = "_AdminLayout";
}

<form asp-action="UsersCreate" method="post">
    <div class="form-group">
        <label asp-for="Name">Nazwa użytkownika</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Adres e-mail</label>
        <input asp-for="Email" class=" form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password">Hasło</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Utwórz</button>
    <a asp-action="UsersIndex" class="btn btn-secondary">Anuluj</a>
</form>
