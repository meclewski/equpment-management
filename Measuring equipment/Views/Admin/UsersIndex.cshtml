@model IEnumerable<AppUser>
@{
    ViewBag.Title = "Lista użytkowników";
    Layout = "_AdminLayout";
}


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Nazwa użytkownika</th>
        <th>Adres e-mail</th>
        <th>Edycja</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" class="text-center">Brak kont użytkowników</td>
        </tr>
    }
    else
    {
        foreach(AppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="UsersDelete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="UsersEdit" asp-route-id="@user.Id">Edytuj</a>
                        <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a class="btn btn-primary" asp-action="UsersCreate">Dodaj użytkownika</a>