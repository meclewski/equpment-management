@model IEnumerable<AppUser>
@{
    ViewBag.Title = "Lista użytkowników";
    Layout = "_AdminLayout";
}


<table id="dt_users" class="table table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nazwa użytkownika</th>
            <th>Adres e-mail</th>
            <th>Edycja</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">Brak kont użytkowników</td>
            </tr>
        }
        else
        {
            foreach (AppUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-sm btn-info " asp-action="UsersEdit" asp-route-id="@user.Id">Edycja</a>
                    </td>
                </tr>
            }
        }
      </tbody>
</table>
<br />
<a class="btn btn-primary" asp-action="UsersCreate">Dodaj użytkownika</a>
<a class="btn btn-danger" asp-action="Index" asp-controller="RoleAdmin">Przydzielanie roli</a>