@model Measuring_equipment.Models.Verification

@{
    ViewData["Title"] = "Dodawanie rodzaju weryfikacji";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VerificationName" class="control-label">Nazwa</label>
                <input asp-for="VerificationName" class="form-control" />
                <span asp-validation-for="VerificationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VerificationDesc" class="control-label">Opis</label>
                <input asp-for="VerificationDesc" class="form-control" />
                <span asp-validation-for="VerificationDesc" class="text-danger"></span>
            </div>
            <br />
            <span style="float:left;">
                <button class="btn btn-primary" type="submit">Zapisz</button>
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </span>
        </form>
    </div>
</div>



