@model Measuring_equipment.Models.Verification

@{
    ViewData["Title"] = "Usuwanie weryfikacji";
    Layout = "_AdminLayout";
}

<h3>Na pewno chcesz usunąć tą pozycję?</h3>
<br />
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nazwa
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VerificationName)
        </dd>
        <dt>
            Opis
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VerificationDesc)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VerificationId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-primary">Anuluj</a>
    </form>
</div>
